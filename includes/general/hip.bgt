double[] sort_nums_by_large(double[] scores)
{
    for (double i = 0; i < scores.length(); i++) {
        double max_index = i;
        for (double j = i+1; j < scores.length(); j++) {
            if (scores[j] > scores[max_index]) {
                max_index = j;
            }
        }
        double temp = scores[i];
        scores[i] = scores[max_index];
        scores[max_index] = temp;
    }
return scores;
}
